{
   "compilerOptions": {

      "target": "es2015",
      "module": "commonjs",
      "outDir": "dist",
      "skipLibCheck": true,
      "noImplicitAny": false,
      "declaration": true,
      "declarationDir": "declarations",
      "sourceMap": true,
      "skipDefaultLibCheck": true
   },
   "include": [
      "src/**/*.ts",
   ],
   "exclude": [
      "node_modules"
   ]
}